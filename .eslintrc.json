{
    "extends": ["airbnb", "airbnb/hooks"],
    "plugins": ["react"],
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"]}],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "curly": [2, "all"]
    },
    "parser": "babel-eslint"
  }
